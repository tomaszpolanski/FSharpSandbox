<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource NavigationBackButtonNormalStyle}"/>
    <Style x:Key="RootPanelStyle" TargetType="Panel">
        <Setter Property="Margin" Value="60,20"/>
    </Style>
    
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlockStyle}">
        <Setter Property="FontSize" Value="40" />
        <Setter Property="LineHeight" Value="40" />
    </Style>
</ResourceDictionary>
